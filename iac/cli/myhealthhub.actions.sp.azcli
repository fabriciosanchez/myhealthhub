# AUTHENTICATING WITH MICROSOFT AZURE
az login

# DEFINING THE SUBSCRIPTION TO BE WORKING ON
az account set -s "<your-subscription-id>"

# CREATES A SERVICE PRINCIPAL FOR API'S WEB APP
az ad sp create-for-rbac \
    --name "<your-webapp-name>" \
    --role contributor \
    --scopes /subscriptions/<your-subscription-id>/resourceGroups/<your-resource-group>/providers/Microsoft.Web/sites/<your-webapp-name> \
    --sdk-auth